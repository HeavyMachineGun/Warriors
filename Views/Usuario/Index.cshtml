<div>
    <input hidden id="id_reg_sel">
    <div class="row">
        <div class="col-lg-12">
            <form role="form" name="frm_usuario" action="Create">
                @Html.AntiForgeryToken()
                <div class="box-header with-border">
                    <h3 class="box-title">Usuario</h3>
                </div>
                <div class="box-body">
                    <input name="id_usuario" hidden value="0" />
                    <input name="id_direccion" value="0" hidden />
                    
                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                    </div>
                    <br>

                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="text" name="paterno" class="form-control" placeholder="Paterno">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="text" class="form-control" name="materno" placeholder="Materno">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="number" min="0" max="150" class="form-control" name="edad" placeholder="Edad">
                    </div>
                    <br>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-danger">Cancelar</button>
                    </div>
                    <br>
                    <!-- /input-group -->
                </div>
                <!-- /.box-body -->
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Usuarios</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover dataTable" width="100%" id="tbl_usuario">
                            <thead>
                                <tr>
                                    <th>Clave</th>
                                    <th>Nombre</th>
                                    <th>Paterno</th>
                                    <th>Materno</th>
                                    <th>Edad</th>
                                    <th>Direccion</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
        <!-- /.col -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form role="form" name="frm_direccion" action="Create">
                <div class="box-header with-border">
                    <h3 class="box-title">Dirección</h3>
                </div>
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    <input name="id_direccion" value="0" hidden />
                    <input name="id_usuario" value="0" hidden />

                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="text" class="form-control" name="calle" placeholder="Calle">
                    </div>
                    <br>

                    <div class="input-group">
                        <input type="text" name="colonia" class="form-control" placeholder="Colonia">
                        <span class="input-group-addon">.00</span>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="text" class="form-control" name="delegacion" placeholder="Delegación">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon">@@</span>
                        <input type="number" min="0" max="150" class="form-control" name="numero" placeholder="Número">
                    </div>
                    <br>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button class="btn btn-danger">Cancelar</button>
                    </div>
                    <br>
                    <!-- /input-group -->
                </div>
                <!-- /.box-body -->
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Direccion</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover dataTable" width="100%" id="tbl_direccion">
                            <thead>
                                <tr>
                                    <th>Clave</th>
                                    <th>Calle</th>
                                    <th>Colonia</th>
                                    <th>Delegacion</th>
                                    <th>Numero</th>
                                    <th>Editar</th>
                                </tr>

                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
        <!-- /.col -->
    </div>
</div>
<div class="modal fade" id="modal-delete" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"><span id="Header"></span></h4>
            </div>
            <div class="modal-body">
                <h1>¿Deseas eliminar registro?</h1>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn_elimina" >Aceptar</button>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="~/Scripts/Principal/JsIndex.js"></script>